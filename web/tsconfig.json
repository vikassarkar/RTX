{
    "compilerOptions": {
        "allowJs": true,
        "outDir": "./src-output/app-build/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "ES5",
        "jsx": "react",
      "skipLibCheck": true,
        "typeRoots": [
            "./node_modules/@types/"
        ],
        "types": [
            "node",
            "jest",
            "core-js"
        ],
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "./src/**/*"
    ]
}